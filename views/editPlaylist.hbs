<h1>Edit Playlist</h1>
<form action="/playlists/edit/{{playlist._id}}?_method=PUT" method="POST">
  <div class="form-group">
    <label for="name">Playlist Name</label>
    <input name="name" type="text" class="form-control" value="{{playlist.name}}" required>
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" class="form-control">{{playlist.description}}</textarea>
  </div>
  <button type="submit" class="btn btn-primary">Update Playlist</button>
</form>
